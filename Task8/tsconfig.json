{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,                
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "allowJs": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}